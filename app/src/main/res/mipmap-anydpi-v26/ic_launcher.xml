<!--
    Adaptive Icon Configuration
    This file should be placed in: res/mipmap-anydpi-v26/

    For Android 13+ (API 33+) with monochrome support, use this file.
    For Android 8.0-12 (API 26-32), remove the monochrome line or use a separate file.
 -->
<adaptive-icon xmlns:android="http://schemas.android.com/apk/res/android">
    <background android:drawable="@drawable/ic_launcher_background"/>
    <foreground android:drawable="@drawable/ic_launcher_foreground"/>
    <!--  Monochrome attribute is supported on Android 13+ (API 33+)  -->
    <monochrome android:drawable="@drawable/ic_launcher_monochrome"/>
</adaptive-icon>